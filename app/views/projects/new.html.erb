<div class="container">
  <div class="row">
    <%= simple_form_for @project , url: projects_path, method: :post do |f| %>
      <%= f.input :title %>
      <%= f.input :text, as: :text%>
      <%= f.input :new_buid, as: :boolean, :default false%>
      <%= f.input :renovation, as: :boolean, :default false %>
      <%= f.input :extension, as: :boolean, :default false %>
      <%= f.input :prestige, as: :boolean, :default false %>
      <%= f.input :photo, as: :attachinary %>

      <%= f.button :submit, class:"btn btn-primary btn-xl" %>

    <% end %>
  </div>
</div>
